<!DOCTYPE html>
<html lang="en" class="bg-dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TheWaterProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TheWaterProject.styles.css" asp-append-version="true"/>
    <link rel="icon" href="water_bottle.png">
</head>
<body class="bg-dark">
<div class="bg-dark text-white p-2">
    <span class="navbar-brand m-lg-2">
        The Water Project 💧
    </span>
    <div class="row m-1 p-1">
        <div id="" class="col-3">Add filter here🔨</div>
    </div>
</div>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - The Water Project - Cristian Cruz 💻 - <a asp-area="" asp-controller="Home">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>